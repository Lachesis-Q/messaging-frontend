<Window x:Class="Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Frontend.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Authentification"
        Width="400" Height="500"
        Background="#121212"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        mc:Ignorable="d">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Connexion"
                   Foreground="#D1C4E9"
                   FontSize="32"
                   FontWeight="Bold"
                   Margin="0,20,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Login Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top">

            <!-- Username -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Email ou identifiant"
                           Foreground="White"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox"
                         Height="35"
                         Background="#1E1E1E"
                         Foreground="White"
                         BorderBrush="#7C4DFF"
                         BorderThickness="1"
                         Padding="10"
                         FontSize="14">
                    <TextBox.Resources>
                        <Style TargetType="TextBox">
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                            <Setter Property="BorderBrush" Value="#7C4DFF"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Background" Value="#1E1E1E"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border CornerRadius="4"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <!-- Password -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Mot de passe"
                           Foreground="White"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="35"
                             Background="#1E1E1E"
                             Foreground="White"
                             BorderBrush="#7C4DFF"
                             BorderThickness="1"
                             Padding="10"/>
            </StackPanel>

            <!-- Remember & Forgot -->
            <DockPanel Margin="0,0,0,15">
                <CheckBox Content="Se souvenir de moi"
                          Foreground="White"
                          VerticalAlignment="Center"
                          IsChecked="True"/>
            </DockPanel>

            <!-- Login Button -->
            <Button Content="Se connecter"
                    Background="#7C4DFF"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Height="45"
                    Margin="0,0,0,20"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="LoginButton_Click"/>

            <!-- Divider -->
            <Separator Margin="0,0,0,20"/>

            <!-- Register Prompt -->
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Pas encore de compte ?"
                           Foreground="Gray"
                           FontSize="12"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Créer un compte"
                           Foreground="#9575CD"
                           FontSize="14"
                           Cursor="Hand"
                           HorizontalAlignment="Center"
                           MouseDown="Register_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
